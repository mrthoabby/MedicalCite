<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageContentListSelectorDoctor"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:contentDescription="@string/app_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/doctor"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@drawable/doctor" />

            <TextView
                android:id="@+id/idNameSelectorDoctor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/acme"
                android:lineSpacingExtra="8dp"
                android:text="@string/txtTemplateData"
                android:textColor="#0277BD"
                app:layout_constraintStart_toEndOf="@+id/imageContentListSelectorDoctor"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtInfoSelectorDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/txtTemplateData"
                android:textAppearance="@style/fonotInfo"
                app:layout_constraintStart_toEndOf="@+id/imageContentListSelectorDoctor"
                app:layout_constraintTop_toBottomOf="@+id/idNameSelectorDoctor" />

            <TextView
                android:id="@+id/txtDateSelectorDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/txtTemplateData"
                app:layout_constraintStart_toEndOf="@+id/imageContentListSelectorDoctor"
                app:layout_constraintTop_toBottomOf="@+id/txtInfoSelectorDoctor" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>